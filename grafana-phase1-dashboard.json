{
  "dashboard": {
    "title": "Phase 1 NLU System Monitoring",
    "tags": ["phase1", "nlu", "ai", "mangwale"],
    "timezone": "browser",
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Question Classification - Requests/sec",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(question_classifier_requests_total[5m])",
            "legendFormat": "{{result}} via {{method}}"
          }
        ],
        "yaxes": [
          {"label": "req/sec", "format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Question Classification - Accuracy",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(question_classifier_requests_total{result=\"question\"}[5m])) / sum(rate(question_classifier_requests_total[5m])) * 100",
            "legendFormat": "Detection Rate %"
          }
        ],
        "options": {
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 85, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Classification Latency (p95)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(question_classifier_latency_ms_bucket[5m]))",
            "legendFormat": "p95 latency"
          }
        ],
        "options": {
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Question Types Distribution",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by(question_type) (rate(question_classifier_by_type_total[5m]))",
            "legendFormat": "{{question_type}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Pattern Match vs LLM Fallback",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(question_classifier_pattern_hits_total[5m])",
            "legendFormat": "Pattern hits ({{pattern_type}})"
          },
          {
            "expr": "rate(question_classifier_llm_fallback_total[5m])",
            "legendFormat": "LLM fallback"
          }
        ]
      },
      {
        "id": 6,
        "title": "Response Generation - Requests/sec",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(intelligent_response_requests_total[5m])",
            "legendFormat": "{{method}} ({{result}})"
          }
        ]
      },
      {
        "id": 7,
        "title": "Response Generation Latency",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(intelligent_response_latency_ms_bucket{method=\"llm\"}[5m]))",
            "legendFormat": "LLM p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(intelligent_response_latency_ms_bucket{method=\"llm\"}[5m]))",
            "legendFormat": "LLM p95"
          },
          {
            "expr": "histogram_quantile(0.50, rate(intelligent_response_latency_ms_bucket{method=\"template\"}[5m]))",
            "legendFormat": "Template p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(intelligent_response_latency_ms_bucket{method=\"template\"}[5m]))",
            "legendFormat": "Template p95"
          }
        ],
        "yaxes": [
          {"label": "latency (ms)", "format": "ms"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "LLM Success Rate",
        "type": "stat",
        "gridPos": {"x": 0, "y": 24, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(intelligent_response_llm_generation_total{result=\"success\"}[5m])) / sum(rate(intelligent_response_llm_generation_total[5m])) * 100",
            "legendFormat": "LLM Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Repeated Questions Detected",
        "type": "stat",
        "gridPos": {"x": 8, "y": 24, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(intelligent_response_repeated_questions_total[5m])) * 60",
            "legendFormat": "Repeated/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 10,
        "title": "Template Fallback Usage",
        "type": "stat",
        "gridPos": {"x": 16, "y": 24, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(intelligent_response_template_fallback_total[5m]))",
            "legendFormat": "Fallback rate"
          }
        ]
      },
      {
        "id": 11,
        "title": "Memory Operations - Requests/sec",
        "type": "graph",
        "gridPos": {"x": 0, "y": 28, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(conversation_memory_operations_total[5m])",
            "legendFormat": "{{operation}} ({{result}})"
          }
        ]
      },
      {
        "id": 12,
        "title": "Embedding Generation Latency",
        "type": "graph",
        "gridPos": {"x": 12, "y": 28, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(conversation_memory_embedding_latency_ms_bucket[5m]))",
            "legendFormat": "p95 latency"
          }
        ],
        "yaxes": [
          {"label": "latency (ms)", "format": "ms"},
          {"format": "short"}
        ]
      },
      {
        "id": 13,
        "title": "Similarity Search - Hit Rate",
        "type": "stat",
        "gridPos": {"x": 0, "y": 36, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(conversation_memory_similarity_search_total{found=\"yes\"}[5m])) / sum(rate(conversation_memory_similarity_search_total[5m])) * 100",
            "legendFormat": "Hit Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 14,
        "title": "Active Conversations",
        "type": "stat",
        "gridPos": {"x": 8, "y": 36, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "conversation_memory_active_sessions",
            "legendFormat": "Active Sessions"
          }
        ]
      },
      {
        "id": 15,
        "title": "Memory Size (Items)",
        "type": "graph",
        "gridPos": {"x": 16, "y": 36, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "sum(conversation_memory_size_items)",
            "legendFormat": "Total items"
          }
        ]
      },
      {
        "id": 16,
        "title": "Classification Errors",
        "type": "graph",
        "gridPos": {"x": 0, "y": 40, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(question_classifier_errors_total[5m])",
            "legendFormat": "{{error_type}}"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [5], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Classification error rate exceeded threshold",
          "name": "High Classification Error Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 17,
        "title": "User Preference Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 40, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(intelligent_response_preference_usage_total[5m])",
            "legendFormat": "{{preference_type}}"
          }
        ]
      },
      {
        "id": 18,
        "title": "Response Length Distribution",
        "type": "graph",
        "gridPos": {"x": 0, "y": 46, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(intelligent_response_length_chars_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(intelligent_response_length_chars_bucket[5m]))",
            "legendFormat": "p95"
          }
        ],
        "yaxes": [
          {"label": "chars", "format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 19,
        "title": "Context Size (chars)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 46, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(intelligent_response_context_size_chars_bucket[5m]))",
            "legendFormat": "p95 context size"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
