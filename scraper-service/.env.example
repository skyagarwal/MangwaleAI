# Scraper Service Environment Configuration

# Server
PORT=3300
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://mangwale_config:config_secure_pass_2024@localhost:5432/headless_mangwale?schema=public

# Redis
REDIS_URL=redis://localhost:6381

# Rate Limiting
ZOMATO_REQUESTS_PER_MINUTE=10
SWIGGY_REQUESTS_PER_MINUTE=10

# Caching
CACHE_TTL_DAYS=7

# Scraping Settings
HEADLESS=true
USER_AGENT_ROTATION=true

# Default Location (Nashik)
DEFAULT_LAT=19.9975
DEFAULT_LNG=73.7898

# Logging
LOG_LEVEL=info
LOG_FILE=scraper.log
